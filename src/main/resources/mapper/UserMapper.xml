<?xml version="1.0" encoding="UTF-8"?>
<mapper namespace="com.mapper.UserMapper">
    <select id="findAll" resultType="com.entity.User">
        select * from user;
    </select>
    <select id="findById" parameterType="int" resultType="com.entity.User">
        select * from user where id = #{id};
    </select>
    <update id="updateUser">
        update user set name = #{name} , sex = #{sex} , address = #{address} where id = #{id};
    </update>
    <insert id="addUser" parameterType="com.entity.User">
        insert into user (name,sex,address) values (#{name},#{sex},#{address});
    </insert>
    <delete id="deleteUser">
        delete from user where id = #{id};
    </delete>
    <select id="find">

    </select>
</mapper>